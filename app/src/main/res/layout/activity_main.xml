<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.educationalapp.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src = "@drawable/surveyor_1"
        android:scaleType="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surveying, the bedrock of any meaningful development."
        android:textColor="#f44336"
        android:paddingLeft="40dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_marginTop="150dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height= "wrap_content"
        android:src = "@drawable/nasa_logo"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="360dp"
        android:layout_marginLeft="230dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "PROCEED QUIZ"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:id="@+id/First_Button"
        android:onClick="Forward_Button"/>



</RelativeLayout>
